<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  
	<TargetFramework>netcoreapp3.1</TargetFramework>
	<OutputType>Exe</OutputType>
	<Nullable>enable</Nullable>
	
	<OutputPath>binaries</OutputPath>
	<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	
	<PublishDir>$(OutputPath)\publish</PublishDir>
	<AppendTargetFrameworkToPublishDir>false</AppendTargetFrameworkToPublishDir>
	<AppendRuntimeIdentifierToPublishDir>false</AppendRuntimeIdentifierToPublishDir>
	
	<PackageOutputPath>$(OutputPath)\nuget</PackageOutputPath>
	
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SendGrid" Version="9.14.0" />
    <PackageReference Include="Twilio" Version="5.39.1" />
  </ItemGroup>

</Project>
